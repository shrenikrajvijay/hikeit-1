<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="0">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/listImage"
        android:src="@drawable/image1"
        android:scaleType="fitXY"
        android:layout_weight="0.04"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/listText"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:gravity="left"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:alpha="0.75"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/rtbHighScore" />

    <RatingBar
        android:id="@+id/rtbHighScore"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="5"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="0.0"


        android:background="@android:color/holo_orange_dark"
        android:layout_alignBottom="@+id/listImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/address"
        android:background="@android:color/black"
        android:alpha="0.75"
        android:gravity="right"
        android:paddingRight="10dp"

        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/imageAddr"
        android:layout_alignRight="@+id/listImage"
        android:layout_alignEnd="@+id/listImage"
        android:layout_toEndOf="@+id/rtbHighScore"
        android:layout_toRightOf="@+id/rtbHighScore"
        android:layout_alignBottom="@+id/listImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="@android:color/white"
        android:id="@+id/imageAddr"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/listText"
        android:layout_toRightOf="@+id/rtbHighScore"
        android:layout_toEndOf="@+id/rtbHighScore" />


</RelativeLayout>